package = interop.capillaryios
language = Objective-C

headers = include/capillaryios/capillaryios-Swift.h
headerFilter = include/capillaryios/*

staticLibraries = libcapillaryios.a
libraryPaths.ios_x64 = capillaryios/build/Build/Products/Release-iphonesimulator
libraryPaths.ios_arm64 = capillaryios/build/Build/Products/Release-iphoneos
libraryPaths.ios_simulator_arm64 = capillaryios/build/Build/Products/Release-iphonesimulator

linkerOpts = -L/usr/lib/swift
linkerOpts.ios_x64 = -ios_simulator_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphonesimulator/
linkerOpts.ios_arm64 = -iphoneos_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphoneos/
linkerOpts.ios_simulator_arm64 = -ios_simulator_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphonesimulator/
